#    urxvt -e sudo ranger

super + x
    betterlockscreen -l

super + s
   $HOME/.local/bin/scratchy

super + shift + s
    spotify

super + shift + c
    /usr/bin/code

# Wallpaper Changer
super + shift + d
    variety -t

super + shift + n
    variety -n

super + shift + p
    variety -p

super + ctrl + i
    maim -s | xclip -selection clipboard -t image/png 

# screenshot
Print
	flameshot full -p $HOME/Pictures/Screenshots/

shift + Print
	flameshot gui -p $HOME/Pictures/Screenshots/

control + Print
	flameshot full -d 3000 -p $HOME/Pictures/Screenshots/

# Screen brightness control
XF86MonBrightnessDown
    sudo light -U 10
XF86MonBrightnessUp
    sudo light -A 10

# Volume control
XF86AudioRaiseVolume
    /usr/bin/pulseaudio-ctl up 10
XF86AudioLowerVolume
    /usr/bin/pulseaudio-ctl down 10
XF86AudioMute
    pactl set-sink-mute 0 toggle

