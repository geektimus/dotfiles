#!/bin/env sh

function node_setup() {
  echo "Configuring Node using fnm"
  fnm install v18.8.0
  fnm alias v18.8.0 latest
  fnm install v16.17.0
  fnm alias v16.17.0 default
  fnm alias v16.17.0 lts
  fnm use latest
  npm install -g npm
}


function python_setup() {
  echo "Configuring Python using pyenv"
  pyenv install python
  pyenv install --list
  pyenv install 3.10.6
  pyenv local 3.10.6
  pip install --upgrade pip
  pip install --user pynvim
}

if [ "$#" -ne 1 ]; then
    echo "Illegal number of parameters"
    exit 1
fi

if [[ "$1" == "node" ]]; then
  node_setup
elif [[ "$1" == "python" ]]; then
  python_setup
else
  echo "Error: Unknown option '$1'"
  exit 2
fi

