#!/usr/bin/env bash

set -euo pipefail

lines="-l 15"
font="-fn 'Iosevka Term-10'" 
colors="-nb 'BGCOLOR' -nf 'FGCOLOR' -sf 'BGCOLOR' -sb 'FGCOLOR'"
prompt="-p 'Run: '"

dmenu_command="dmenu $lines $font $prompt "$@" $colors"

export _JAVA_AWT_WM_NONREPARENTING=1
exec $(dmenu_path | eval $dmenu_command )